@model SalesWebMVC.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Cadastrar";
}
<h2>@ViewData["Title"]</h2>    

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Quando enviar o usuário é chamando o metodo create da ação post*@
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label">Nome</label>
                <input asp-for="Seller.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label">E-mail</label>
                <input asp-for="Seller.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.BirthDate" class="control-label">Data de Nascimento</label>
                <input asp-for="Seller.BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label">Salário Base</label>
                <input asp-for="Seller.BaseSalary" class="form-control" />
            </div> 
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label">Departamento</label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success"/>
            </div>
        </form>

    </div>
</div>