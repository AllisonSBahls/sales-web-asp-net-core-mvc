@model IEnumerable<SalesWebMVC.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr class="info">
            <th>
                @*Recurso do framework para chamar os Name*@
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @*Recurso do framework para chamar os dados*@
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @*Recurso do framework para chamar os dados*@
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @*Recurso do framework para chamar os dados*@
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @*Recurso do framework para chamar os dados*@
                @Html.DisplayFor(modelItem => item.BaseSalary)
            </td>
            <td>
                <a asp-actions="Edit" asp-route-ids="@item.Id">Editar</a>
            </td>
            <td>
                <a asp-actions="Details" asp-route-ids="@item.Id">Detalhes</a>
            </td>
            <td>
                <a asp-actions="Delete" asp-route-ids="@item.Id">Deletar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
